{% extends 'backoffice/main/base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <h1 class="mt-3 mx-3">{{ product.name }}</h1>

    {#% include "backoffice/fragments/_flash_message.html.twig" %#}

    <table class="table table-hover">
        <tbody>
            <tr class="table-active">
                <th scope="col">Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr class="table-active">
                <th scope="col">Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr class="table-active">
                <th scope="col">prix</th>
                <td>{{ product.price}}</td>
            </tr>
            <tr class="table-active">
                <th scope="col">Image</th>
                <td>{{ product.picture}}</td>
            </tr>
            <tr class="table-active">
                <th scope="col">Référence</th>
                <td>{{ product.reference}}</td>
            </tr>
            <tr class="table-active">
                <th scope="col">Marque</th>
                <td>{{ product.marques.nom}}</td>
            </tr>
            <tr class="table-active">
                <th scope="col">Catégories</th>
                <td>
                    {% for categorie in product.categories %}
                        {{ categorie.name }}
                        {% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="col">Marque</th>
                <td>{{ product.statuts.name}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_list') }}" class="btn btn-sm btn-outline-info mx-3">Retour à la liste</a>

    {# Edition of character not yet optimized #}
    {# <a href="{{ path('app_backoffice_product_editproducts', {'id': product.id}) }}" class="btn btn-sm btn-outline-warning mx-3">Modifier</a> #}
{% endblock %}