{% extends 'frontoffice/base.html.twig' %}

{% block title %} {{ category.name }} - md-distribution {% endblock %}

{% block content %}
  <h2>Produits de la catégorie {{ category.name }} </h2>
  <div class="product-list">
    {% if products is empty or products is null %}
      <p>Aucun produit trouvé dans cette catégorie.</p>
    {% else %}
      <ul class="product-grid"> <!-- Utilisez la classe "product-grid" ici -->
        {% for product in products %}
          <li class="product">
            <img src="{{ asset('images/' ~ product.picture) }}" alt="{{ product.name }}">
            <h3>{{ product.name }}</h3>
            <p>{{ product.description }}</p>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
{% endblock %}
